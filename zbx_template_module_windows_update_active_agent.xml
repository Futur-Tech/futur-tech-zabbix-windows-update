<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
    <version>5.0</version>
    <date>2021-07-07T18:34:54Z</date>
    <groups>
        <group>
            <name>Templates/Futur-Tech/Modules Windows</name>
        </group>
    </groups>
    <templates>
        <template>
            <template>Template Futur-Tech Module Windows Updates</template>
            <name>Template Futur-Tech Module Windows Updates</name>
            <description>https://github.com/Futur-Tech/futur-tech-zabbix-windows-update</description>
            <groups>
                <group>
                    <name>Templates/Futur-Tech/Modules Windows</name>
                </group>
            </groups>
            <applications>
                <application>
                    <name>Windows Updates</name>
                </application>
            </applications>
            <items>
                <item>
                    <name>Windows Updates install</name>
                    <type>ZABBIX_ACTIVE</type>
                    <key>system.run[powershell.exe -NoProfile -ExecutionPolicy Bypass -command Get-Date -Date ((New-Object -com &quot;Microsoft.Update.AutoUpdate&quot;).Results.LastInstallationSuccessDate) -UFormat %s]</key>
                    <delay>30m</delay>
                    <trends>0</trends>
                    <units>unixtime</units>
                    <description>Date when Windows Updates were last installed</description>
                    <applications>
                        <application>
                            <name>Windows Updates</name>
                        </application>
                    </applications>
                    <triggers>
                        <trigger>
                            <expression>{now()} - {last()} &lt; 36h</expression>
                            <name>New Windows Updates installed in the last 36h</name>
                            <opdata>Last install date: {ITEM.LASTVALUE}</opdata>
                            <priority>INFO</priority>
                            <dependencies>
                                <dependency>
                                    <name>Host has been rebooted to install Windows Updates in the last 36h</name>
                                    <expression>{Template Futur-Tech Module Windows Updates:system.run[powershell.exe -NoProfile -ExecutionPolicy Bypass -command Test-Path HKLM:\SOFTWARE\Microsoft\Windows\CurrentVersion\WindowsUpdate\'Auto Update'\RebootRequired].regexp(True,36h)}=1 and {Template Futur-Tech Module Windows Updates:system.run[powershell.exe -NoProfile -ExecutionPolicy Bypass -command Test-Path HKLM:\SOFTWARE\Microsoft\Windows\CurrentVersion\WindowsUpdate\'Auto Update'\RebootRequired].last()}=&quot;False&quot;</expression>
                                </dependency>
                            </dependencies>
                        </trigger>
                    </triggers>
                </item>
                <item>
                    <name>Windows Updates search</name>
                    <type>ZABBIX_ACTIVE</type>
                    <key>system.run[powershell.exe -NoProfile -ExecutionPolicy Bypass -command Get-Date -Date ((New-Object -com &quot;Microsoft.Update.AutoUpdate&quot;).Results.LastSearchSuccessDate) -UFormat %s]</key>
                    <delay>30m</delay>
                    <trends>0</trends>
                    <units>unixtime</units>
                    <description>Date when Windows Updates were last searched</description>
                    <applications>
                        <application>
                            <name>Windows Updates</name>
                        </application>
                    </applications>
                </item>
                <item>
                    <name>Reboot Required</name>
                    <type>ZABBIX_ACTIVE</type>
                    <key>system.run[powershell.exe -NoProfile -ExecutionPolicy Bypass -command Test-Path HKLM:\SOFTWARE\Microsoft\Windows\CurrentVersion\WindowsUpdate\'Auto Update'\RebootRequired]</key>
                    <delay>15m</delay>
                    <trends>0</trends>
                    <value_type>TEXT</value_type>
                    <description>Check if reboot is required for installing update(s)</description>
                    <applications>
                        <application>
                            <name>Windows Updates</name>
                        </application>
                    </applications>
                    <triggers>
                        <trigger>
                            <expression>{regexp(True,36h)}=1 and {last()}=&quot;False&quot;</expression>
                            <name>Host has been rebooted to install Windows Updates in the last 36h</name>
                            <priority>WARNING</priority>
                            <manual_close>YES</manual_close>
                        </trigger>
                        <trigger>
                            <expression>{last()}=&quot;True&quot;</expression>
                            <name>Reboot required by Windows Updates</name>
                            <priority>HIGH</priority>
                        </trigger>
                    </triggers>
                </item>
            </items>
        </template>
    </templates>
</zabbix_export>
